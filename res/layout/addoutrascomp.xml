<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	android:id="@+id/addteste"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

<Button
    android:id="@+id/addoutrasvoltar"
    android:layout_width="66dp"
    android:layout_height="wrap_content"
    android:layout_x="54dp"
    android:layout_y="406dp"
    android:text="Voltar"
    android:textSize="15sp" />

<Button
    android:id="@+id/addoutrasadicionar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_x="148dp"
    android:layout_y="406dp"
    android:text="Adicionar"
    android:textSize="15sp" />

<TextView
    android:id="@+id/texto_addtestepercent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_x="4dp"
    android:layout_y="310dp"
    android:text="Percentagem da nota final:"
    android:textSize="15sp" />

<EditText
    android:id="@+id/addoutraspercent"
    android:layout_width="39dp"
    android:layout_height="wrap_content"
    android:layout_x="193dp"
    android:layout_y="296dp"
    android:ems="10"
    android:text="0"
    android:textSize="12sp" >

    <requestFocus />
</EditText>

<TextView
    android:id="@+id/texto_addtestesimbpercent"
    android:layout_width="19dp"
    android:layout_height="24dp"
    android:layout_x="232dp"
    android:layout_y="308dp"
    android:text="%"
    android:textSize="15sp" />

<TextView
    android:id="@+id/TextView02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_x="2dp"
    android:layout_y="246dp"
    android:text="Percentagem da nota final:"
    android:textSize="15sp" />

<EditText
    android:id="@+id/addoutrasnota"
    android:layout_width="39dp"
    android:layout_height="wrap_content"
    android:layout_x="192dp"
    android:layout_y="232dp"
    android:ems="10"
    android:text="0"
    android:textSize="12sp" />

<TextView
    android:id="@+id/TextView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_x="2dp"
    android:layout_y="39dp"
    android:gravity="center"
    android:text="Esta componente visa instrumentos de avaliação em que não se incluam os testes, os exames ou os trabalhos. Comportamento, participação e assiduidade serão exemplos desta componente. Assim deve ser adicionada só uma vez com a nota e percentagem correspondente."
    android:textSize="15sp" />

<Spinner
    android:id="@+id/spinneroutras"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_x="-3dp"
    android:layout_y="176dp" />

</AbsoluteLayout>